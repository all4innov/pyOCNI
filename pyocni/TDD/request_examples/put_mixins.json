/*

 =1= Multiple mixins can be updated at the same time
 =2= Each description MUST at least contain term and scheme object members to be updated
 =3= Mixin descriptions must follow the OCCI JSON rendering draft
 =4= Term, scheme and location are forbidden to change
 */

{
    "mixins": [
        {
            "term": "medium",
            "scheme": "http://example.com/template/resource#",
            "title": "Medium VM",
            "attributes": {
                "occi": {
                    "compute": {
                        "speed": {
                            "type": "number",
                            "default": 2.8
                        }
                    }
                }
            },
            "location": "/template/resource/medium/"
        }
    ]
}